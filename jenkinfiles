pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                // If job is not already tied to SCM, keep this
                git branch: 'main', url: 'https://github.com/SatyaHemesh/Jenkins.git'
            }
        }

        stage('Publish HTML Report') {
            steps {
                publishHTML(target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: '.',          // change if form.html is in a folder
                    reportFiles: 'form.html',
                    reportName: 'Student Registration Form'
                ])
            }
        }
    }
}
